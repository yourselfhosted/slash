{
  "name": "slash-extension",
  "displayName": "Slash",
  "version": "1.0.12",
  "description": "An open source, self-hosted platform for sharing and managing your most frequently used links. Save and share your links very easily.",
  "scripts": {
    "dev": "plasmo dev",
    "build": "export PARCEL_WORKER_BACKEND=process && plasmo build",
    "package": "plasmo package",
    "lint": "eslint --ext .js,.ts,.tsx, src",
    "lint-fix": "eslint --ext .js,.ts,.tsx, src --fix"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/joy": "5.0.0-beta.51",
    "@plasmohq/storage": "^1.15.0",
    "classnames": "^2.5.1",
    "lucide-react": "^0.486.0",
    "plasmo": "^0.90.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chrome": "^0.0.287",
    "@types/node": "^22.10.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-react": "^7.37.5",
    "postcss": "^8.4.47",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.7.2"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "storage",
      "webRequest"
    ],
    "host_permissions": [
      "*://*/*"
    ]
  },
  "pnpm": {
    "overrides": {
      "@swc/core": "1.5.7"
    }
  }
}